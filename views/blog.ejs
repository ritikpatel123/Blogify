<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Blog</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="container">
    <h1><%= blog.title %></h1>
    <img src=<%= blog.coverImageURL %> alt="cover image" width="700vw"/>
    <p><%= blog.body %></p>
</div>
     <div class="container mt-3">
        <img src=<%= blog.createdBy.profileImageURL%> alt="profileImageURL%" width='100px'/> <%= blog.createdBy.fullName %>
     </div>
    <div class="container mt-4">
        <h1>Comment</h1>

        <% if (locals.user) { %>
            <form action='/blog/comment/<%=  blog._id %>' method="post" >
                    <input 
                      type="text"
                      class="form-control" 
                      name="content"
                      placeholder="write your comment here"
                    />
                    <button class="btn btn-primary" >Submit</button>
            </form>
         
        <% } %>
        <div>
            <% comments.forEach(com => { %>
                <div>
                  <img src=<%= com.createdBy.profileImageURL %> width="100px" />
                  <%= com.createdBy.fullName %>
                  <pre><%= com.comment %></pre>
                </div>
            <% }) %>
        </div>
    </div>

 
    <%- include("./partials/script") %>


</body>
</html>